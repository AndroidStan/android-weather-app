<!-- others -->

<style name="basic_blue_button">
	<item name="android:textColor">@color/white</item>
	<item name="android:textSize">18sp</item>
	<item name="android:textStyle">bold</item>
	<item name="android:padding">10dip</item>
	<item name="android:background">@drawable/button_light_blue</item>
	<item name="android:layout_margin">10dip</item>
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
</style>

<style name="global_listview" parent="@android:style/Widget.ListView">
	<item name="android:background">@drawable/rectangle_rounded</item>
	<item name="android:divider">@drawable/list_divider</item>
	<item name="android:dividerHeight">1dip</item>
	<item name="android:cacheColorHint">@color/clear</item>
</style>

<style name="global_frame">
	<item name="android:background">@drawable/rectangle_rounded</item>
</style>

<style name="ProgressTheme">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_gravity">center</item>
	<item name="android:windowNoTitle">true</item>
	<item name="android:windowBackground">@color/transparent</item>
	<item name="android:textColor">@color/white</item>
	<item name="android:textSize">15sp</item>
</style>

<style name="map_popup_name">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
</style>
	
<style name="map_popup_coordinates">
